{
  "name": "qsr-ordering-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Comprehensive restaurant ordering and management platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:website": "cd apps/restaurant-website && npm run dev",
    "dev:customer": "cd apps/customer-web && npm run dev",
    "dev:kitchen": "cd apps/kitchen-tablet && npm run dev",
    "dev:admin": "cd apps/admin-web && npm run dev",
    "dev:tracker": "cd tools/project-tracker && npm run dev",
    "dev:all": "concurrently \"npm run dev:website\" \"npm run dev:customer\" \"npm run dev:kitchen\" \"npm run dev:admin\" \"npm run dev:tracker\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "npm install && cd apps/customer-web && npm install && cd ../kitchen-tablet && npm install && cd ../admin-web && npm install && cd ../../tools/project-tracker && npm install",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:types": "supabase gen types typescript --local > packages/types/src/database.types.ts",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
